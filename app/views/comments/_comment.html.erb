<strong>comment: </strong><%= comment.comment %><br>
<% if user_signed_in? && @blog.user.id == current_user.id %>
  <%= link_to 'reply', new_blog_comment_path(@blog, parent_id: comment.id), :remote => true, local: false %>
<% end %>
<br>
<strong>Replies:</strong>
<% if comment.replies.any? %>
  <strong>username: </strong><%= @blog.user.email %>
  <% comment.replies.each do |reply| %> 
    <%= render partial: 'comments/reply', locals: { reply: reply } %>
  <% end %>
<% end %>
<div id="reply-form-<%= comment.id %>"></div>
